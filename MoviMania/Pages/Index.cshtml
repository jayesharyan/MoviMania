@page
@model IndexModel

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: greenyellow; /* Set background color */
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: lightcyan; /* Set container background color */
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .btn-container {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .register-btn, .login-btn {
            display: inline-block;
            padding: 15px 30px;
            margin: 0 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
        }

            .register-btn:hover, .login-btn:hover {
                background-color: #0056b3;
            }

        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            padding: 20px;
        }

        .card {
            width: 200px;
            border: 1px solid #ddd;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease;
            cursor: pointer;
        }

            .card:hover {
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            }

            .card img {
                width: 100%;
                height: auto;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome to MoviMania</h1>
        <!-- Buttons container -->
        <div class="btn-container">
            <a href="/Identity/Account/Register" class="register-btn">Register</a>
            <a href="/Identity/Account/Login" class="login-btn">Login</a>
        </div>

        <!-- Movie cards -->
        <div class="container">
            @foreach (var movie in Model.Movies)
            {
                <div class="card">
                    <div class="card-body">
                        <h4>@movie.Title</h4>
                        <p>@movie.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
